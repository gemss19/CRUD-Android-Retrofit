<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="@dimen/logo_img"
                android:layout_height="@dimen/logo_img"
                android:layout_gravity="center"
                android:src="@drawable/ic_office"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/radley"
                android:text="@string/home_text"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="24dp"/>
            
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:columnCount="2"
        app:rowCount="2"
        android:id="@+id/mainGrid"
        android:background="@drawable/bg">

        <android.support.v7.widget.CardView
            android:id="@+id/get_pgw"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardCornerRadius="@dimen/corner_card"
            android:layout_margin="@dimen/corner_card"
            android:elevation="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_daftar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_menu1"
                    android:fontFamily="@font/radley"
                    android:textSize="16dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/add_pgw"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:cardCornerRadius="@dimen/corner_card"
            android:layout_margin="@dimen/corner_card"
            android:elevation="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_menu2"
                    android:fontFamily="@font/radley"
                    android:textSize="16dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/about_app"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardCornerRadius="@dimen/corner_card"
            android:layout_margin="@dimen/corner_card"
            android:elevation="5dp"
            android:layout_height="0dp"
            android:layout_width="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_about"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_menu3"
                    android:fontFamily="@font/radley"
                    android:textSize="16dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

</LinearLayout>
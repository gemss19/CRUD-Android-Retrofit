<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/rowContainer"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fab_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layoutName"
        android:layout_alignTop="@id/img"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:weightSum="2"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="@id/img"
            android:layout_weight="1"
            android:fontFamily="@font/radley"
            android:text="Nama Pegawai"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/layoutName"
        android:layout_alignLeft="@id/layoutName"
        android:background="#d4d4d4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutPosisi"
        android:layout_alignLeft="@id/layoutName"
        android:layout_alignStart="@id/layoutName"
        android:layout_below="@id/layoutName"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:text="Posisi"
        android:textSize="15sp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/posisi"
            android:layout_weight="1"
            android:text="Posisi"
            android:textSize="@dimen/fab_margin"/>
    </LinearLayout>

</RelativeLayout>